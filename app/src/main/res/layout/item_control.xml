<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="10dp"
    android:id="@+id/item_control"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="متین براهویی"
            android:layout_alignParentRight="true"
            android:textSize="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/iransansmobile_medium"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="استعلاجی"
            android:textSize="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/iransansmobile_medium"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/lbl_remainder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مانده"
            android:textSize="16dp"
            android:layout_below="@id/txt_name"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/iransansmobile_medium"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbl_remainder"
            android:layout_centerHorizontal="true">


            <TextView
                android:id="@+id/txt_remainder_day"
                android:layout_width="30dp"
                android:layout_height="25dp"
                tools:text="۰۶"
                android:gravity="center"
                android:textSize="16dp"
                android:fontFamily="@font/iransansmobile_medium"
                android:textColor="@color/orange"
                />

            <TextView
                android:id="@+id/txt_remainder_hour"
                android:layout_width="30dp"
                android:layout_height="25dp"
                tools:text="۰۸"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_toRightOf="@id/txt_remainder_day"
                android:fontFamily="@font/iransansmobile_medium"
                android:textColor="@color/orange"
                />

            <TextView
                android:id="@+id/txt_remainder_minutes"
                android:layout_width="30dp"
                android:layout_height="25dp"
                tools:text="۲۷"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_toRightOf="@id/txt_remainder_hour"
                android:fontFamily="@font/iransansmobile_medium"
                android:textColor="@color/orange"
                />

            <TextView
                android:id="@+id/lbl_day"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="روز"
                android:layout_below="@id/txt_remainder_day"
                android:textSize="10dp"
                android:gravity="center"
                android:fontFamily="@font/iransansmobile_medium"
                android:textColor="@color/grey"
                />

            <TextView
                android:id="@+id/lbl_hour"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="ساعت"
                android:layout_toRightOf="@id/lbl_day"
                android:layout_below="@id/txt_remainder_day"
                android:textSize="10dp"
                android:gravity="center"
                android:fontFamily="@font/iransansmobile_medium"
                android:textColor="@color/grey"
                />

            <TextView
                android:id="@+id/lbl_minute"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="دقیقه"
                android:layout_toRightOf="@id/lbl_hour"
                android:layout_below="@id/txt_remainder_day"
                android:textSize="10dp"
                android:gravity="center"
                android:fontFamily="@font/iransansmobile_medium"
                android:textColor="@color/grey"
                />



        </RelativeLayout>




    </RelativeLayout>



</androidx.cardview.widget.CardView>