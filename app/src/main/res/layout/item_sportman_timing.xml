<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:backgroundTint="@color/light_yellow"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="10dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="وقت اول"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/iransansmobile_medium"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txt_time"
            android:layout_marginTop="8dp"
            android:layoutDirection="rtl">

            <TextView
                android:id="@+id/lbl_start_time"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="از"
                android:textSize="18dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/iransansmobile_light"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/txt_start_time"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                tools:text="۱۸:۰۰"
                android:gravity="center"
                android:textSize="22dp"
                android:textColor="@color/green"
                android:fontFamily="@font/iransansmobile_medium"
                android:layout_toLeftOf="@id/lbl_start_time"
                android:layout_marginRight="8dp"
                />

            <TextView
                android:id="@+id/lbl_end_time"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="تا"
                android:textSize="18dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/iransansmobile_light"
                android:layout_toLeftOf="@id/txt_start_time"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/txt_end_time"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                tools:text="۲۰:۰۰"
                android:gravity="center"
                android:textSize="22dp"
                android:textColor="@color/red"
                android:fontFamily="@font/iransansmobile_medium"
                android:layout_toLeftOf="@id/lbl_end_time"
                android:layout_marginRight="8dp"
                />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_edit"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="16dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ویرایش"
                android:textSize="16dp"
                android:textColor="@color/light_yellow"
                android:fontFamily="@font/iransansmobile_medium"
                android:layout_gravity="center" />

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</androidx.cardview.widget.CardView>