<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_check"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layoutDirection="rtl"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/background_checkbox_container_off"
    >


        <ImageView
            android:id="@+id/img_check"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/background_check_box_off"
            android:src="@drawable/ic_tick"
            android:padding="2dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/txt_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="۱۶ تا ۱۸"
            android:layout_marginRight="12dp"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/iransansmobile_medium"
            android:layout_toLeftOf="@id/img_check"
            android:textColor="@color/black"/>

</RelativeLayout>