<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sportman_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.GuardDashboardActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/container_header"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            >

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/white"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        app:srcCompat="@drawable/ic_green_energy" />



                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="متین براهویی"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/iransansmobile_medium"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="12dp"
                        android:layout_alignParentRight="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="مسئول ورزشی"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/txt_name"
                        android:layout_marginRight="8dp"
                        android:fontFamily="@font/iransansmobile_light" />

                    <TextView
                        android:id="@+id/lbl_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="اداره کل برق"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/iransansmobile_bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="استان سیستان و بلوچستان"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/iransansmobile_medium"
                        android:layout_below="@id/lbl_brand"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>


            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">



                <RelativeLayout
                    android:id="@+id/container_buttons_and_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    >

                    <RelativeLayout
                        android:id="@+id/container_buttons"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:id="@+id/txt_timing"
                            android:layout_width="140dp"
                            android:layout_height="50dp"
                            android:text="تنظیم زمانبندی ها"
                            android:textColor="@color/light_yellow"
                            android:textSize="16dp"
                            android:gravity="center"
                            android:background="@drawable/background_ripple_button_sportman"
                            android:fontFamily="@font/iransansmobile_medium" />

                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/light_yellow"
                            android:layout_toRightOf="@id/txt_timing"/>

                        <TextView
                            android:id="@+id/txt_list"
                            android:layout_width="140dp"
                            android:layout_height="50dp"
                            android:text="مشاهده لیست"
                            android:textColor="@color/light_yellow"
                            android:textSize="16dp"
                            android:gravity="center"
                            android:layout_toRightOf="@id/txt_timing"
                            android:layout_marginLeft="1dp"
                            android:background="@drawable/background_ripple_button_sportman1"
                            android:fontFamily="@font/iransansmobile_medium" />

                    </RelativeLayout>



                        <TextView
                            android:id="@+id/txt_choose_date"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="شنبه ۹۸/۰۸/۱۲"
                            android:background="@drawable/background_date_reserve_sport_form"
                            android:layout_marginTop="8dp"
                            android:textSize="16dp"
                            android:gravity="center"
                            android:textColor="@color/light_yellow"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:layout_below="@id/container_buttons"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="16dp"
                            android:layout_marginRight="32dp"
                            android:fontFamily="@font/iransansmobile_medium"/>

                    <TextView
                        android:id="@+id/txt_all_date"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="کل هفته"
                        android:background="@drawable/background_red_10_radius"
                        android:layout_marginTop="8dp"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:textColor="@color/light_yellow"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_below="@id/container_buttons"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="32dp"
                        android:fontFamily="@font/iransansmobile_medium"/>



                    <RelativeLayout
                        android:id="@+id/container_types"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_below="@id/txt_choose_date"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="16dp"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/container_volleyball"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_toRightOf="@id/container_football"
                            android:layout_marginLeft="8dp"
                            app:cardCornerRadius="4dp"
                            android:layout_margin="4dp"
                            android:backgroundTint="@color/yellow">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="right|center_vertical"
                                app:srcCompat="@drawable/ic_volleyball"
                                android:layout_marginRight="8dp"
                                />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:text="والیبال"
                                android:textSize="16dp"
                                android:textColor="@color/black"
                                android:layout_gravity="left|center_vertical"
                                android:fontFamily="@font/iransansmobile_medium"
                                android:layout_toLeftOf="@id/img_icon"
                                android:layout_marginRight="8dp"
                                android:gravity="center"
                                />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/container_football"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            app:cardCornerRadius="4dp"
                            android:layout_toRightOf="@id/container_swimming"
                            android:layout_marginLeft="8dp"
                            android:layout_margin="4dp"
                            android:backgroundTint="@color/light_green">

                            <ImageView
                                android:id="@+id/img_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="right|center_vertical"
                                app:srcCompat="@drawable/ic_football"
                                android:layout_marginRight="8dp"
                                />

                            <TextView
                                android:id="@+id/txt_type"
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:text="فوتبال"
                                android:textSize="16dp"
                                android:textColor="@color/black"
                                android:layout_gravity="left|center_vertical"
                                android:fontFamily="@font/iransansmobile_medium"
                                android:layout_toLeftOf="@id/img_icon"
                                android:layout_marginRight="8dp"
                                android:gravity="center"
                                />

                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/container_swimming"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            app:cardCornerRadius="4dp"
                            android:layout_margin="4dp"
                            android:backgroundTint="@color/light_blue">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="right|center_vertical"
                                app:srcCompat="@drawable/ic_swimming"
                                android:layout_marginRight="8dp"
                                />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:text="استخر"
                                android:textSize="16dp"
                                android:textColor="@color/black"
                                android:layout_gravity="left|center_vertical"
                                android:fontFamily="@font/iransansmobile_medium"
                                android:layout_toLeftOf="@id/img_icon"
                                android:layout_marginRight="8dp"
                                android:gravity="center"
                                />

                        </androidx.cardview.widget.CardView>



                    </RelativeLayout>





                </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_sportman_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/container_buttons_and_date"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_sportman_timing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/container_buttons_and_date"
                    />





            </RelativeLayout>



        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_logout"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:cardCornerRadius="100dp"
            android:layout_gravity="bottom|left"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/black"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="9dp"
                android:paddingRight="7dp"
                app:srcCompat="@drawable/ic_logout"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_add_time"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:cardCornerRadius="100dp"
            android:layout_gravity="right|bottom"
            android:backgroundTint="@color/light_blue"
            android:layout_marginBottom="12dp"
            android:visibility="invisible"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            >

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_add"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/container_shadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".5"
            android:translationZ="100dp"
            android:visibility="invisible"
            android:backgroundTint="@color/black"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/container_week"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:backgroundTint="@color/black"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp"
            android:translationZ="150dp"
            android:visibility="invisible"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/txt_saturday"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="شنبه ۱۳۹۸/۰۸/۰۲"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/iransansmobile_light"
                    android:layout_marginTop="16dp"
                    />

                <TextView
                    android:id="@+id/txt_sunday"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="یکشنبه ۱۳۹۸/۰۸/۰۲"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/iransansmobile_light"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/txt_saturday"
                    />

                <TextView
                    android:id="@+id/txt_monday"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="دوشنبه ۱۳۹۸/۰۸/۰۲"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/iransansmobile_light"
                    android:layout_below="@id/txt_sunday"
                    />

                <TextView
                    android:id="@+id/txt_tuesday"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="سه شنبه ۱۳۹۸/۰۸/۰۲"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/iransansmobile_light"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/txt_monday"
                    />

                <TextView
                    android:id="@+id/txt_wednesday"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="چهارشنبه ۱۳۹۸/۰۸/۰۲"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/iransansmobile_light"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/txt_tuesday"
                    />

                <TextView
                    android:id="@+id/txt_thursday"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="پنجشنبه ۱۳۹۸/۰۸/۰۲"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/iransansmobile_light"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/txt_wednesday"
                    />

                <TextView
                    android:id="@+id/txt_friday"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="جمعه ۱۳۹۸/۰۸/۰۲"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/iransansmobile_light"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/txt_thursday"
                    />


            </RelativeLayout>



        </androidx.cardview.widget.CardView>

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/blue"
            android:layout_gravity="center"
            android:visibility="visible"/>

        <RelativeLayout
            android:id="@+id/container_nothing_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"
            >

            <ImageView
                android:id="@+id/img_nothing_found"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_paper"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="چیزی برای نمایش وجود ندارد"
                android:textSize="14dp"
                android:textColor="@color/grey"
                android:fontFamily="@font/iransansmobile_medium"
                android:layout_below="@id/img_nothing_found"
                android:layout_marginTop="8dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/container_focus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:background="@color/black"
            android:alpha=".7"/>

        <RelativeLayout
            android:id="@+id/container_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <FrameLayout
                android:id="@+id/container_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>




    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</androidx.drawerlayout.widget.DrawerLayout>