<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    android:backgroundTint="@color/orange"
    >

    <RelativeLayout
        android:id="@+id/item_notice_furlough"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_light_yellow_border_10dp"
        android:layout_margin="1dp">

        <RelativeLayout
            android:id="@+id/container_type_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/lbl_request_furlough"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="درخواست مرخصی"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_toRightOf="@id/txt_type"
                android:fontFamily="@font/iransansmobile_medium"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/txt_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="استعلاجی"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:fontFamily="@font/iransansmobile_medium"
                android:layout_marginTop="8dp"
                android:layout_marginRight="4dp" />



        </RelativeLayout>

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="رد شده"
            android:textSize="16dp"
            android:fontFamily="@font/iransansmobile_light"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"/>



        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            tools:text="متین براهویی"
            android:layout_below="@id/container_type_status"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:gravity="center"
            android:fontFamily="@font/iransansmobile_medium"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp" />



        <TextView
            android:id="@+id/txt_amount"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            tools:text="۳ روز"
            android:textColor="@color/light_blue"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/iransansmobile_light"
            android:layout_below="@id/container_type_status"
            android:layout_marginLeft="16dp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>